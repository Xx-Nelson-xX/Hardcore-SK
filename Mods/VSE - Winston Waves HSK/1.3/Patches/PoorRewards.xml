				<value>
					<label>Bronze drop</label>
				</value>
			</li>
			<li Class="PatchOperationReplace">
				<xpath>Defs/VSEWW.RewardDef[defName="VSEWW_SteelDrop"]/description</xpath>
				<value>
					<description>Cargo pods drop 250 bronze</description>
				</value>
			</li>
			<li Class="PatchOperationReplace">
