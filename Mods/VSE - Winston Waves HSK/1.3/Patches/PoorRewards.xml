				<xpath>Defs/VSEWW.RewardDef[defName="VSEWW_MedicineDrop"]/description</xpath>
				<value>
					<description>Cargo pods drop 30 raw herbal medicine</description>
				</value>
			</li>
			<li Class="PatchOperationReplace">
				<xpath>Defs/VSEWW.RewardDef[defName="VSEWW_MedicineDrop"]/items</xpath>
