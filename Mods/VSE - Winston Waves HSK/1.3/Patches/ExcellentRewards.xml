<?xml version="1.0" encoding="utf-8" ?>
<Patch>

	<Operation Class="PatchOperationSequence">
		<success>Normal</success>
		<operations>
			<li Class="PatchOperationReplace">
				<xpath>Defs/VSEWW.RewardDef[defName="VSEWW_ExcellentResourceDrop"]/description</xpath>
				<value>
					<description>Cargo pods drop 1000 wood, 1000 steel, 400 reinforced concrete, 60 industrial components, 20 spacer components and 300 ferrotitanium alloy</description>
				</value>
			</li>
			<li Class="PatchOperationReplace">
				<xpath>Defs/VSEWW.RewardDef[defName="VSEWW_ExcellentResourceDrop"]/items</xpath>
				<value>
					<items>
					  <li>
						<thing>WoodLog</thing>
						<count>1000</count>
					  </li>
					  <li>
						<thing>Plasteel</thing>
						<count>1000</count>
					  </li>
					  <li>
						<thing>ReinforcedConcrete</thing>
						<count>400</count>
					  </li>
					  <li>
						<thing>ComponentIndustrial</thing>
						<count>60</count>
					  </li>
					  <li>
						<thing>ComponentSpacer</thing>
						<count>20</count>
					  </li>
					  <li>
						<thing>TitaniumBar</thing>
						<count>300</count>
					  </li>
					</items>
				</value>
			</li>
		</operations>
	</Operation>

	<Operation Class="PatchOperationSequence">
		<success>Normal</success>
		<operations>
			<li Class="PatchOperationReplace">
				<xpath>Defs/VSEWW.RewardDef[defName="VSEWW_ExcellentFuelDrop"]/description</xpath>
				<value>
					<description>Cargo pods drop 1000 chemfuel, 1000 coal, 600 firewood and 400 uranium</description>
				</value>
			</li>
			<li Class="PatchOperationReplace">
				<xpath>Defs/VSEWW.RewardDef[defName="VSEWW_ExcellentFuelDrop"]/items</xpath>
				<value>
					<items>
					  <li>
						<thing>Chemfuel</thing>
						<count>1000</count>
					  </li>
					  <li>
						<thing>Coal</thing>
						<count>1000</count>
					  </li>
					  <li>
						<thing>Kindling</thing>
						<count>600</count>
					  </li>
					  <li>
						<thing>Uranium</thing>
						<count>400</count>
					  </li>
					</items>
				</value>
			</li>
		</operations>
	</Operation>

	<Operation Class="PatchOperationSequence">
		<success>Normal</success>
		<operations>
			<li Class="PatchOperationReplace">
				<xpath>Defs/VSEWW.RewardDef[defName="VSEWW_ExcellentWeaponDrop"]/randomItems</xpath>
				<value>
					<randomItems>
					  <li>
						<thingCategories>
						  <li>SurvivalToolsNeolithic</li>
						  <li>SurvivalToolsIndustrial</li>
						  <li>SurvivalToolsSpacer</li>
						  <li>SpecialMelee</li>
						  <li>Pistols</li>
						  <li>Shotguns</li>
						  <li>SMGs</li>
						  <li>Rifles</li>
						  <li>SRifles</li>
						  <li>MachineGun</li>
						  <li>Glaunchers</li>
						  <li>Futuristic</li>
						</thingCategories>
						<excludeThingCategories>
						  <li MayRequire="CETeam.CombatExtended">Ammo</li>
						</excludeThingCategories>
						<quality>Excellent</quality>
						<count>5</count>
					  </li>
					</randomItems>
				</value>
			</li>
		</operations>
	</Operation>

	<Operation Class="PatchOperationSequence">
		<success>Normal</success>
		<operations>
			<li Class="PatchOperationAdd">
				<xpath>Defs/VSEWW.RewardDef[defName="VSEWW_ExcellentArmorDrop"]/randomItems/li[1]/thingCategories</xpath>
				<value>
				  <li>LightFullArmorCat</li>
				  <li>MediumUpperArmorCat</li>
				  <li>MediumFullArmorCat</li>
				  <li>MediumHelmetsCat</li>
				  <li>Setmarinearmor</li>
				  <li>SetSniper</li>
				  <li>SetSecurity</li>
				</value>
			</li>
		</operations>
	</Operation>

</Patch>